@{
	ViewData["Title"] = "Thanh toán";
}

<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Thanh toán</h1>
				<nav class="d-flex align-items-center">
					<a href="/">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
					<span>Thanh toán</span>
				</nav>
			</div>
		</div>
	</div>
</section>

<section class="checkout_area section_gap">
	<div class="container">
		<div class="billing_details">
			<div class="row">

				<!-- LEFT: FORM -->
				<div class="col-lg-7">
					<h3>Chi tiết hóa đơn</h3>
					<form class="row contact_form" id="checkoutForm">

						<div class="col-md-6 form-group p_star">
							<input type="text" class="form-control" placeholder="Họ*" required>
						</div>

						<div class="col-md-6 form-group p_star">
							<input type="text" class="form-control" placeholder="Tên*" required>
						</div>

						<div class="col-md-6 form-group p_star">
							<input type="text" class="form-control" placeholder="Số điện thoại*" required>
						</div>

						<div class="col-md-6 form-group p_star">
							<input type="email" class="form-control" placeholder="Email*" required>
						</div>

						<div class="col-md-12 form-group p_star">
							<input type="text" class="form-control" placeholder="Địa chỉ*" required>
						</div>

						<div class="col-md-12 form-group">
							<h3>Ghi chú đơn hàng</h3>
							<textarea class="form-control" rows="2" placeholder="Ghi chú"></textarea>
						</div>

					</form>
				</div>

				<!-- RIGHT: ORDER BOX -->
				<div class="col-lg-5">
					<div class="order_box">
						<h4 class="mb-3">Đơn hàng của bạn</h4>

						<div class="order-header d-flex fw-bold border-bottom pb-2 mb-2">
							<div class="flex-grow-1">Sản phẩm</div>
							<div class="text-center" style="width:60px;">SL</div>
							<div class="text-end" style="width:120px;">Giá</div>
						</div>

						<div class="order-item d-flex mb-2">
							<div class="flex-grow-1 product-name">
								Giày Boot Nam Đế Cao Màu Vàng PALA GN400
							</div>
							<div class="text-center" style="width:60px;">x01</div>
							<div class="text-end" style="width:120px;">550.000đ</div>
						</div>

						<div class="order-item d-flex mb-2">
							<div class="flex-grow-1 product-name">
								Giày boot nam màu trơn không có dây kéo
							</div>
							<div class="text-center" style="width:60px;">x01</div>
							<div class="text-end" style="width:120px;">806.000đ</div>
						</div>

						<div class="order-item d-flex mb-3">
							<div class="flex-grow-1 product-name">
								Nam Giày ống Chelsea Suedette Mặc vào
							</div>
							<div class="text-center" style="width:60px;">x01</div>
							<div class="text-end" style="width:120px;">623.000đ</div>
						</div>

						<hr>

						<div class="d-flex justify-content-between mb-2">
							<span>Tạm tính</span>
							<strong>1.979.000đ</strong>
						</div>

						<div class="d-flex justify-content-between mb-2">
							<span>Phí ship</span>
							<strong>20.000đ</strong>
						</div>

						<div class="d-flex justify-content-between fs-5 fw-bold text-danger">
							<span>Tổng cộng</span>
							<span>1.999.000đ</span>
						</div>

						<hr>

						<div class="form-check mb-2">
							<input class="form-check-input" type="radio" name="payment" checked>
							<label class="form-check-label">
								Trả tiền mặt khi nhận hàng
							</label>
						</div>

						<div class="form-check mb-3">
							<input class="form-check-input" type="radio" name="payment">
							<label class="form-check-label">
								Thanh toán bằng thẻ
							</label>
						</div>

						<div class="form-check mb-3">
							<input class="form-check-input" type="checkbox" required>
							<label class="form-check-label">
								Tôi đã đọc và chấp nhận <a href="#">điều khoản</a>
							</label>
						</div>

						<button class="btn btn-warning w-100 fw-bold">
							XÁC NHẬN ĐƠN HÀNG
						</button>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>
