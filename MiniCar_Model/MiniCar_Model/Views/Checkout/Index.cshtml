@{
	ViewData["Title"] = "Thanh toán";
}
@model CheckoutVM
<form asp-controller="Checkout"
			asp-action="Payment"
			method="post">

	<input type="hidden" name="CartId" value="@Model.CartId" />
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Thanh toán</h1>
					<nav class="d-flex align-items-center">
						<a asp-controller="Home" asp-action="Index">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
						<a asp-controller="Checkout" asp-action="Index">Thanh toán</a>
					</nav>
				</div>
			</div>
		</div>
	</section>

	<<section class="checkout_area section_gap">
		<div class="container">
			<div class="row justify-content-center">

				<div class="col-lg-10">

					<!-- THÔNG TIN GIAO HÀNG -->
					<div class="checkout-section mb-4">
						<h5 class="fw-bold mb-3">Thông tin giao hàng</h5>

						<div class="border rounded p-4 bg-light d-flex justify-content-between align-items-center">
							<div>
								<div class="fw-bold">@Model.Customer.NameAccount</div>
								<div>@Model.Customer.PhoneNumber</div>
								<div class="text-muted">
									@Model.Customer.AddressAccount
								</div>
							</div>

							<a asp-controller="Account" asp-action="EditProfile" class="btn btn-outline-primary btn-sm">
								Đổi thông tin
							</a>
						</div>
					</div>

					<div class="mt-3 p-3 border rounded bg-light">
						<label class="fw-semibold mb-1 d-block">
							Ghi chú đơn hàng
						</label>
						<textarea class="form-control"
											name="note"
											rows="3"
											placeholder="Ví dụ: Giao giờ hành chính, gọi trước khi giao...">
					</textarea>
					</div>

					<!-- SẢN PHẨM -->
					<div class="checkout-section mb-4">
						<h5 class="fw-bold mb-3">Sản phẩm</h5>

						<div class="table-responsive">
							<table class="table align-middle">
								<thead class="table-light">
									<tr>
										<th style="width:80px;">Ảnh</th>
										<th>Sản phẩm</th>
										<th class="text-center">Màu sắc</th>
										<th class="text-center">Số lượng</th>
										<th class="text-end">Đơn giá</th>
										<th class="text-end">Thành tiền</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model.Products) {
										<tr>
											<td>
												<img src="@Url.Content(@item.ProductImage)"
														 class="img-fluid rounded"
														 style="width:60px;height:60px;object-fit:cover">
											</td>

											<td>
												@item.ProductName
											</td>

											<td class="text-center">
												@item.ColorName
											</td>

											<td class="text-center">
												@item.Quantity
											</td>

											<td class="text-end">@item.Price</td>

											<td class="text-end text-danger fw-bold">
												@item.PriceTotal
											</td>
										</tr>
									}
								</tbody>

							</table>
						</div>

						<div class="d-flex justify-content-end fw-bold fs-5 mt-3">
							<span class="me-3">Tổng cộng: </span>
							<span class="text-danger"> @Model.Total</span>
						</div>


						<!-- PHƯƠNG THỨC THANH TOÁN -->
						<div class="checkout-section mb-4">
							<h5 class="fw-bold mb-3">Phương thức thanh toán</h5>

							<div class="form-check mb-2">
								<input class="form-check-input"
											 type="radio"
											 name="paymentMethod"
											 value="CASH"
											 checked>
								<label class="form-check-label">
									Trả tiền mặt khi nhận hàng
								</label>
							</div>

							<div class="form-check">
								<input class="form-check-input"
											 type="radio"
											 name="paymentMethod"
											 value="CARD">
								<label class="form-check-label">
									Thanh toán bằng thẻ
								</label>
							</div>
						</div>

						<!-- ĐIỀU KHOẢN -->
						<div class="form-check mb-4">
							<input class="form-check-input" type="checkbox" required>
							<label class="form-check-label">
								Tôi đã đọc và chấp nhận <a href="#">điều khoản</a>
							</label>
						</div>

						<!-- BUTTON -->
						<button type="submit"
										class="btn btn-warning w-100 fw-bold py-3">
							XÁC NHẬN ĐƠN HÀNG
						</button>

					</div>
				</div>
			</div>
		</div>
	</section>
</form>
