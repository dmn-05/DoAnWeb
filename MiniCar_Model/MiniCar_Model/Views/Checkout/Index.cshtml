@{
	ViewData["Title"] = "Thanh toán";
}

<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Thanh toán</h1>
				<nav class="d-flex align-items-center">
					<a asp-controller="Home" asp-action="Index">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
					<a asp></a>
				</nav>
			</div>
		</div>
	</div>
</section>

<<section class="checkout_area section_gap">
	<div class="container">
		<div class="row justify-content-center">

			<div class="col-lg-10">

				<!-- THÔNG TIN GIAO HÀNG -->
				<div class="checkout-section mb-4">
					<h5 class="fw-bold mb-3">Thông tin giao hàng</h5>

					<div class="border rounded p-4 bg-light d-flex justify-content-between align-items-center">
						<div>
							<div class="fw-bold">Nguyễn Văn A</div>
							<div>0123 456 789</div>
							<div class="text-muted">
								123 Nguyễn Trãi, Phường 5, Quận 5, TP.HCM
							</div>
						</div>

						<button class="btn btn-outline-primary btn-sm">
							Đổi địa chỉ
						</button>
					</div>
				</div>

				<div class="mt-3 p-3 border rounded bg-light">
					<label class="fw-semibold mb-1 d-block">
						Ghi chú đơn hàng
					</label>
					<textarea class="form-control"
										rows="3"
										placeholder="Ví dụ: Giao giờ hành chính, gọi trước khi giao...">
	</textarea>
				</div>

				<!-- SẢN PHẨM -->
				<div class="checkout-section mb-4">
					<h5 class="fw-bold mb-3">Sản phẩm</h5>

					<div class="table-responsive">
						<table class="table align-middle">
							<thead class="table-light">
								<tr>
									<th style="width:80px;">Ảnh</th>
									<th>Sản phẩm</th>
									<th class="text-center">Số lượng</th>
									<th class="text-end">Đơn giá</th>
									<th class="text-end">Thành tiền</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>
										<img src="/img/product/demo1.jpg"
												 class="img-fluid rounded"
												 style="width:60px;height:60px;object-fit:cover">
									</td>

									<td>
										Giày Boot Nam Đế Cao Màu Vàng
									</td>

									<td class="text-center">
										<input type="number"
													 class="form-control form-control-sm text-center"
													 value="1"
													 min="1"
													 style="width:70px;margin:auto">
									</td>

									<td class="text-end">550.000đ</td>

									<td class="text-end text-danger fw-bold">
										550.000đ
									</td>
								</tr>

								<tr>
									<td>
										<img src="/img/product/demo2.jpg"
												 class="img-fluid rounded"
												 style="width:60px;height:60px;object-fit:cover">
									</td>

									<td>
										Giày boot nam không dây
									</td>

									<td class="text-center">
										<input type="number"
													 class="form-control form-control-sm text-center"
													 value="1"
													 min="1"
													 style="width:70px;margin:auto">
									</td>

									<td class="text-end">806.000đ</td>

									<td class="text-end fw-bold">
										806.000đ
									</td>
								</tr>
							</tbody>

						</table>
					</div>

					<div class="d-flex justify-content-end fw-bold fs-5 mt-3">
						<span class="me-3">Tổng cộng: </span>
						<span class="text-danger"> 1.999.000đ</span>
					</div>


					<!-- PHƯƠNG THỨC THANH TOÁN -->
					<div class="checkout-section mb-4">
						<h5 class="fw-bold mb-3">Phương thức thanh toán</h5>

						<div class="form-check mb-2">
							<input class="form-check-input" type="radio" name="payment" checked>
							<label class="form-check-label">
								Trả tiền mặt khi nhận hàng
							</label>
						</div>

						<div class="form-check">
							<input class="form-check-input" type="radio" name="payment">
							<label class="form-check-label">
								Thanh toán bằng thẻ
							</label>
						</div>
					</div>

					<!-- ĐIỀU KHOẢN -->
					<div class="form-check mb-4">
						<input class="form-check-input" type="checkbox" required>
						<label class="form-check-label">
							Tôi đã đọc và chấp nhận <a href="#">điều khoản</a>
						</label>
					</div>

					<!-- BUTTON -->
					<button class="btn btn-warning w-100 fw-bold py-3">
						XÁC NHẬN ĐƠN HÀNG
					</button>

				</div>
			</div>
		</div>
</section>

