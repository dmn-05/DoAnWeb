@{
    ViewData["Title"] = "Thông tin cá nhân";
}

﻿@* Thương code *@
@model Account

<div class="pt-100px">
	<div class="container profile-container mt-5 pt-5 mb-5">

		<!-- NÚT QUAY LẠI -->
		<div class="row align-items-center mb-3">
			<div class="col-6">
				<button class="btn btn-outline-secondary btn-sm"
								onclick="history.back()">
					← Quay lại
				</button>
			</div>
		</div>

		<!-- HEADER PROFILE -->
		<div class="text-center mb-4">
			<h1>@Model.UserName</h1>
			<div>
				<a asp-action="EditProfile"
					 class="btn btn-link text-decoration-none fw-semibold">
					Sửa
				</a>
			</div>
		</div>

		<!-- NÚT CHỨC NĂNG -->
		<div class="row g-3 text-center mb-4">
			<div class="col-4">
				<a asp-action="Order"
					 class="btn btn-light w-100 py-3 shadow-sm rounded-4">
					<i class="fa-solid fa-file-lines"></i>
					<br /><small>Đơn hàng</small>
				</a>
			</div>

			<div class="col-4">
				<a asp-controller="Cart" asp-action=""
					 class="btn btn-light w-100 py-3 shadow-sm rounded-4">
					<i class="fa-solid fa-basket-shopping"></i>
					<br /><small>Giỏ hàng</small>
				</a>
			</div>

			<div class="col-4">
				<a asp-action="Wishlist"
					 class="btn btn-light w-100 py-3 shadow-sm rounded-4">
					<i class="fa-solid fa-heart"></i>
					<br /><small>Yêu thích</small>
				</a>
			</div>
		</div>

		<!-- THÔNG TIN CÁ NHÂN -->
		<div class="card shadow-sm rounded-4 mx-auto" style="max-width: 600px;">
			<div class="card-body">

				<div class="d-flex justify-content-between border-bottom py-2">
					<span class="text-muted">Tên</span>
					<span class="fw-semibold">@Model.NameAccount</span>
				</div>



				<div class="d-flex justify-content-between border-bottom py-2">
					<span class="text-muted">Email</span>
					<span>@Model.Email</span>
				</div>

				<div class="d-flex justify-content-between border-bottom py-2">
					<span class="text-muted">Số điện thoại</span>
					<span>
						@(Model.PhoneNumber?.Length >= 3
											? "*******" + Model.PhoneNumber[^3..]
											: Model.PhoneNumber)
					</span>
				</div>
				<!-- DANH SÁCH ĐỊA CHỈ (GIỮA) -->
				<!-- ĐỊA CHỈ -->
				<div class="d-flex justify-content-between border-bottom py-2">
					<span class="text-muted">Địa chỉ</span>
					<span>@Model.AddressAccount</span>
				</div>


			</div>
		</div>

	</div>
</div>

@* end thuong *@