@{
    ViewData["Title"] = "Danh sách sản phẩ yêu thích";
}
<div class="pt-100px">
  <div class="pt-5 mt-5">
    <div class="container my-4">

      <!-- NÚT QUAY LẠI -->
      <div class="row align-items-center mb-3">
        <div class="col-6">
          <button class="btn btn-outline-secondary btn-sm"
                  onclick="history.back()">
            ← Quay lại
          </button>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
          <thead class="table-light">
            <tr>
              <th>Hình ảnh</th>
              <th>Tên</th>
              <th class="d-none d-md-table-cell">Giá</th>
              <th>Thêm</th>
              <th>Xóa</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td>
                <img src="~/img/logo.png"
                     class="img-fluid rounded"
                     style="max-width: 80px;">
              </td>

              <td class="fw-semibold">
                Lorem ipsum
              </td>

              <td class="d-none d-md-table-cell text-success fw-semibold">
                $80
              </td>

              <td>
                <button class="btn btn-sm btn-success rounded-circle px-2">
                  +
                </button>
              </td>

              <td>
                <button class="btn btn-sm btn-outline-danger rounded-circle px-2">
                  <i class="fa fa-trash" aria-hidden="true"></i>
                </button>
              </td>
            </tr>
          </tbody>

        </table>
      </div>

    </div>
  </div>

</div>
