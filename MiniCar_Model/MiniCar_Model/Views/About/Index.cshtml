@{
	ViewData["Title"] = "Giới thiệu";
}

<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Giới thiệu</h1>
				<nav class="d-flex align-items-center">
					<a href="/">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
					<a href="/About/Index">Giới thiệu</a>
				</nav>
			</div>
		</div>
	</div>
</section>
<section class="about-intro section_gap">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-6">
				<h2>MiniCar Model</h2>
				<p>
					Chúng tôi chuyên cung cấp các mô hình xe sưu tầm chính hãng,
					đa dạng tỉ lệ, phục vụ người đam mê và nhà sưu tập.
				</p>
			</div>
			<div class="col-lg-6">
				<img class="img-fluid" src="/img/about/about-1.jpg" alt="">
			</div>
		</div>
	</div>
</section>
<section class="about-mission section_gap">
	<div class="container">
		<div class="row text-center">
			<div class="col-md-6">
				<h4>Sứ mệnh</h4>
				<p>
					Mang đến sản phẩm mô hình chất lượng cao với giá trị sưu tầm thực tế.
				</p>
			</div>
			<div class="col-md-6">
				<h4>Tầm nhìn</h4>
				<p>
					Trở thành cửa hàng mô hình xe được cộng đồng tin tưởng và lựa chọn.
				</p>
			</div>
		</div>
	</div>
</section>
<section class="about-feature section_gap">
	<div class="container">
		<div class="row text-center">
			<div class="col-lg-4">
				<h5>Sản phẩm chính hãng</h5>
				<p>Cam kết nguồn gốc rõ ràng, chất lượng cao.</p>
			</div>
			<div class="col-lg-4">
				<h5>Giao hàng nhanh</h5>
				<p>Đóng gói cẩn thận, giao hàng toàn quốc.</p>
			</div>
			<div class="col-lg-4">
				<h5>Hỗ trợ tận tâm</h5>
				<p>Hỗ trợ khách hàng trước và sau mua.</p>
			</div>
		</div>
	</div>
</section>
<section class="about-cta section_gap text-center">
	<div class="container">
		<h3>Bạn đang tìm mô hình yêu thích?</h3>
		<a href="/Product" class="primary-btn">Xem sản phẩm</a>
	</div>
</section>

