@model MiniCar_Model.Models.ViewModels.AboutViewModel

<div class="row">
	@foreach (var item in Model.ProductPosts)
	{
		<div class="col-lg-4 col-md-6 mb-4 product-item"
				 data-search="@($"{item.Title} {item.Summary}".ToLower())">

			<div class="card h-100 shadow-sm border-0">
				<img src="@Url.Content(item.Thumbnail)"
						 class="card-img-top"
						 style="height:220px; object-fit:cover;">

				<div class="card-body">
					<h5>@item.Title</h5>
					<p class="text-muted">@item.Summary</p>
				</div>

				<div class="card-footer bg-white border-0">
					<a href="/ProductPost/@item.Slug"
						 class="btn btn-outline-dark btn-sm">
						Xem chi tiết
					</a>
				</div>
			</div>
		</div>
	}
</div>

@if (Model.ProductTotalPages > 1)
{
	<nav class="mt-4">
		<ul class="pagination justify-content-center">

			<li class="page-item @(Model.ProductCurrentPage == 1 ? "disabled" : "")">
				<a href="#" class="page-link product-page"
					 data-page="@(Model.ProductCurrentPage - 1)">
					&laquo;
				</a>
			</li>

			@for (int i = 1; i <= Model.ProductTotalPages; i++)
			{
				<li class="page-item @(i == Model.ProductCurrentPage ? "active" : "")">
					<a href="#" class="page-link product-page" data-page="@i">
						@i
					</a>
				</li>
			}

			<li class="page-item @(Model.ProductCurrentPage == Model.ProductTotalPages ? "disabled" : "")">
				<a href="#" class="page-link product-page"
					 data-page="@(Model.ProductCurrentPage + 1)">
					&raquo;
				</a>
			</li>

		</ul>
	</nav>
}
