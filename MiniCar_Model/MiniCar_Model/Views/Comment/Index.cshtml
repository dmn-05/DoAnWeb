@{
	ViewData["Title"] = "Bình luận";
}

<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Đánh giá sản phẩm</h1>
				<nav class="d-flex align-items-center">
					<a href="/">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
					<span>Đánh giá</span>
				</nav>
			</div>
		</div>
	</div>
</section>
<section class="section_gap">
	<div class="container" style="max-width:80%;">

		<!-- PRODUCT INFO -->
		<div class="row mb-5 align-items-center">

			<!-- IMAGE -->
			<div class="col-md-4">
				<img src="~/img/product/main.jpg"
						 class="img-fluid rounded border"
						 style="aspect-ratio:1/1; object-fit:cover;">
			</div>

			<!-- INFO -->
			<div class="col-md-8">
				<h3 class="fw-bold mb-2">
					Giày Boot Nam Đế Cao Màu Vàng
				</h3>

				<div class="text-danger fw-bold fs-4 mb-2">
					550.000đ
				</div>

				<!-- RATING -->
				<div class="mb-2">
					<span class="text-warning fs-5">★★★★★</span>
					<span class="text-muted">(4.8 / 5)</span>
				</div>

				<div class="text-muted mb-3">
					Đã bán: <strong>1.250</strong> sản phẩm
				</div>

				<div class="small text-muted">
					Danh mục: Giày Nam / Boot
				</div>
			</div>

		</div>
		<!-- COMMENTS -->
		<div class="mb-4">
			<h4 class="fw-bold">
				Đánh giá & nhận xét
			</h4>
			<div class="text-muted">
				120 bình luận từ khách hàng
			</div>
		</div>
		<div class="border rounded p-4 mb-3">

			<div class="d-flex justify-content-between mb-2">
				<div class="fw-bold">Nguyễn Văn A</div>
				<div class="text-warning">★★★★★</div>
			</div>

			<div class="small text-muted mb-2">
				Đã mua hàng • 2 ngày trước
			</div>

			<p class="mb-2">
				Giày mang rất êm, form đẹp, đúng như mô tả.
				Giao hàng nhanh, đóng gói cẩn thận.
			</p>

			<div class="d-flex gap-2">
				<img src="https://via.placeholder.com/80"
						 class="rounded border"
						 style="width:80px;height:80px;object-fit:cover;">
				<img src="https://via.placeholder.com/80"
						 class="rounded border"
						 style="width:80px;height:80px;object-fit:cover;">
			</div>

		</div>
		<div class="border rounded p-4 mb-3">

			<div class="d-flex justify-content-between mb-2">
				<div class="fw-bold">Trần Minh B</div>
				<div class="text-warning">★★★★☆</div>
			</div>

			<div class="small text-muted mb-2">
				Đã mua hàng • 1 tuần trước
			</div>

			<p class="mb-0">
				Sản phẩm ổn, hơi chật so với size mình mang.
			</p>

		</div>
		<!-- WRITE COMMENT -->
		<div class="border rounded p-4 mt-5 bg-light">

			<h5 class="fw-bold mb-3">
				Viết đánh giá của bạn
			</h5>

			<div class="mb-2 text-warning fs-4">
				☆ ☆ ☆ ☆ ☆
			</div>

			<textarea class="form-control mb-3"
								rows="4"
								placeholder="Chia sẻ cảm nhận của bạn về sản phẩm...">
			</textarea>

			<button class="btn btn-warning fw-bold">
				GỬI ĐÁNH GIÁ
			</button>

		</div>

	</div>
</section>
