								<div class="price">
									<h6>@item.Price</h6>
									<h6>@item.NameCategory</h6>
								</div>
								<div class="prd-bottom">

									<a asp-controller="Cart" asp-action="Index" asp-route-variantId="@item.VariantId" class="social-info">
										<span class="ti-bag"></span>
