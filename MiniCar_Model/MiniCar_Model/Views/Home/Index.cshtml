@{
	ViewData["Title"] = "Trang Chủ";
	int i = 1;
}
@model HomeVM

<!--back to top-->
<a href="#" class="cd-top">Back To Top</a>
<!--end back to top-->
<!-- start banner Area -->
<section class="banner-area">
	<div class="container">
		<div class="row fullscreen align-items-center justify-content-start">
			<div class="col-lg-12">
				<div class="active-banner-slider owl-carousel">

					@foreach (var item in Model.Slideshows) {
						if (i == 1) {
							<!-- single-slide -->
							<div class="row single-slide align-items-center d-flex">
								<div class="col-lg-5 col-md-6">
									<div class="banner-content">
										<h1>@item.Title</h1>
										<div class="add-bag d-flex align-items-center">
											<a class="add-btn" asp-controller="Cart" asp-action="Index" asp-route-variantId="@item.VariantId"><span class="lnr lnr-cross"></span></a>
											<span class="add-text text-uppercase">Mô tả chi tiết sản phẩm</span>
										</div>
									</div>
								</div>
								<div class="col-lg-7">
									<a asp-controller="Product" asp-action="Detail" asp-route-variantId="@item.VariantId" class="banner-img">
										<img class="img-fluid" src="@item.ImageUrl" alt="@item.Title">
									</a>
								</div>
							</div>
						} else {
							<!-- single-slide -->
							<div class="row single-slide">
								<div class="col-lg-5 col-md-6">
									<div class="banner-content">
										<h1>@item.Title</h1>
										<div class="add-bag d-flex align-items-center">
											<a class="add-btn" asp-controller="Cart" asp-action="Index" asp-route-variantId="@item.VariantId"><span class="lnr lnr-cross"></span></a>
											<span class="add-text text-uppercase">Mô tả chi tiết sản phẩm</span>
										</div>
									</div>
								</div>
								<div class="col-lg-7">
									<a asp-controller="Product" asp-action="Detail" asp-route-variantId="@item.VariantId" class="banner-img">
										<img class="img-fluid" src="@item.ImageUrl" alt="@item.Title">
									</a>
								</div>
							</div>
						}
						i += 1;
					}

				</div>
			</div>
		</div>
	</div>
</section>
<!-- End banner Area -->
