@{
	ViewData["Title"] = "Liên Hệ";
}
@model Contact
<!-- back to top button-->
<a href="#" class="cd-top">Back To Top</a>
<!--End Back to top button-->
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Liên hệ</h1>
				<nav class="d-flex align-items-center">
					<a asp-controller="Home" asp-action="Index">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
					<a asp-controller="Home" asp-action="Contact">Liên hệ</a>
				</nav>
			</div>
		</div>
	</div>
</section>
<!-- End Banner Area -->
<!--================Contact Area =================-->
<section class="contact_area section_gap_bottom">
	<div class="map">
		<div class="container">
			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4039.8705560272992!2d106.69766422016625!3d10.77211434018894!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f40a3b49e59%3A0xa1bd14e483a602db!2zVHLGsOG7nW5nIENhbyDEkeG6s25nIEvhu7kgdGh14bqtdCBDYW8gVGjhuq9uZw!5e0!3m2!1svi!2sus!4v1768402495946!5m2!1svi!2sus"
							height="585" style="border:0;" allowfullscreen=""></iframe>
		</div>
	</div>
	<div class="container">
		<!--			<div id="mapBox" class="mapBox" data-lat="40.701083" data-lon="-74.1522848" data-zoom="13" data-info="PO Box CT16122 Collins Street West, Victoria 8007, Australia."-->
		<!--			 data-mlat="40.701083" data-mlon="-74.1522848">-->
		<!--			</div>-->
		@if (ViewBag.Success != null)
		{
			<div class="alert alert-success">@ViewBag.Success</div>
		}
		<div class="row">
			<div class="col-lg-3">
				<div class="contact_info">
					<div class="info_item">
						<i class="lnr lnr-home"></i>
						<h6>Quận 1, Việt Nam</h6>
						<p>
							65 Huỳnh Thúc Kháng, Phường Sài Gòn,
							Quận 1,Thành Phố Hồ Chí Minh, Việt Nam
						</p>
					</div>
					<div class="info_item">
						<i class="lnr lnr-phone-handset"></i>
						<h6><a href="#">0789123456</a></h6>
						<p>Thứ 2 đến thứ 6</p>
					</div>
					<div class="info_item">
						<i class="lnr lnr-envelope"></i>
						<h6><a href="#">support@shoeshop.com</a></h6>
						<p>Gửi cho chúng tôi câu hỏi của bạn bất cứ lúc nào!</p>
					</div>
				</div>
			</div>
			<div class="col-lg-9">
				<form asp-controller="Home" asp-action="Contact" class="row contact_form " method="post" id="contactForm" novalidate="novalidate">
					<div class="col-md-6">
						<div class="form-group">
							<input asp-for="Name" class="form-control" id="fullname" placeholder="Nhập tên của bạn">
							<span asp-validation-for="Name" class="text-danger"></span>
							<p class="form-message"></p>
						</div>
						<div class="form-group">
							<input asp-for="Email" class="form-control" id="email" placeholder="Nhập email của bạn">
							<span asp-validation-for="Email" class="text-danger"></span>
							<p class="form-message"></p>
						</div>
						<div class="form-group">
							<input asp-for="Subject" class="form-control" id="subject" placeholder="Chủ đề bạn muốn nói đến">
							<span asp-validation-for="Subject" class="text-danger"></span>
							<p class="form-message"></p>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<input asp-for="Phone" class="form-control" id="phone" placeholder="Số điện thoại">
							<span asp-validation-for="Phone" class="text-danger"></span>
							<p class="form-message"></p>
						</div>
						<div class="form-group">
							<textarea class="form-control" asp-for="Message" id="message" rows="1" placeholder="Lời nhắn của bạn"></textarea>
							<span asp-validation-for="Message" class="text-danger"></span>
							<p class="form-message"></p>
						</div>
					</div>
					<div class="col-md-12 text-right">
						<div class="form-group">
							<a href="contact.html" class="hover-text"></a>
							<button type="submit" value="submit" class=" form-submit primary-btn">Gửi đến chúng tôi</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
<!--================Contact Area =================-->
