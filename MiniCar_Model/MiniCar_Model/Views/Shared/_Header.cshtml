	<!-- Start Header Area -->
<header class="header_area sticky-header">
	<div class="main_menu">
		<nav class="navbar navbar-expand-lg navbar-light main_box align-items-center">
			<div class="container">
				<!-- Brand and toggle get grouped for better mobile display -->
				<a class="navbar-brand logo_h logo"
					 asp-controller="Home"
					 asp-action="Index">
					<img src="~/img/logo_team.png" alt="Logo" style="width:70px; height:auto;">
				</a>

				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
								aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<!-- Collect the nav links, forms, and other content for toggling -->
				<div class="collapse navbar-collapse" id="navbarSupportedContent">

					<!-- MENU TRÁI -->
					<ul class="nav navbar-nav menu_nav ml-auto">
						<li class="nav-item active">
							<a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
						</li>
						@await Component.InvokeAsync("CategoryMenu")

						<li class="nav-item">
							<a class="nav-link" asp-controller="About" asp-action="Index">Giới thiệu</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Home" asp-action="Contact">Liên hệ</a>
						</li>
					</ul>

					<!-- MENU PHẢI -->
					<ul class="nav navbar-nav navbar-right">

						<!-- GIỎ HÀNG -->
						<li class="nav-item">
							<a class="nav-link d-flex align-items-center"
								 asp-controller="Cart"
								 asp-action="Index">

								<span class="position-relative d-inline-flex align-items-center me-2 cart-icon">
									<i class="bi bi-cart3" style="font-size:18px;"></i>

									@await Component.InvokeAsync("CartHeader")
								</span>

								<span class="cart-text">Giỏ hàng</span>
							</a>
						</li>
						@using Microsoft.AspNetCore.Http
						<!-- TÀI KHOẢN -->
						<li class="nav-item dropdown">
							@if (Context.Session.GetInt32("AccountId") == null) {
								<!-- CHƯA ĐĂNG NHẬP -->
								<a class="nav-link d-flex align-items-center gap-2"
									 asp-controller="Account"
									 asp-action="Login">
									<span class="ti-user mr-2"> </span>
									<span>Đăng nhập</span>
								</a>
							} else {
								<!-- ĐÃ ĐĂNG NHẬP -->
								<a class="nav-link dropdown-toggle d-flex align-items-center gap-2"
									 href="#"
									 id="accountDropdown"
									 role="button"
									 data-toggle="dropdown"
									 aria-haspopup="true"
									 aria-expanded="false">
									<span class="ti-user"></span>
									<span>@Context.Session.GetString("UserName")</span>
								</a>

								<div class="dropdown-menu dropdown-menu-right shadow-sm"
										 aria-labelledby="accountDropdown">
									<a class="dropdown-item"
										 asp-controller="Account"
										 asp-action="Profile">
										Thông tin tài khoản
									</a>
									<div class="dropdown-divider"></div>
									<a class="dropdown-item text-danger"
										 asp-controller="Account"
										 asp-action="Logout">
										Đăng xuất
									</a>
								</div>
							}
						</li>

						<!-- TÌM KIẾM -->
						<li class="nav-item">
							<a class="nav-link d-flex align-items-center"
								 href="javascript:void(0)">
								<span class="lnr lnr-magnifier" id="search"></span>
							</a>
						</li>

					</ul>
				</div>

			</div>
		</nav>
	</div>
	<div class="search_input" id="search_input_box">
		<div class="container">
			<form class="d-flex justify-content-between">
				<input type="text" class="form-control" id="search_input" placeholder="Tìm kiếm">
				<button type="submit" class="btn"></button>
				<span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
			</form>
		</div>
	</div>

</header>
