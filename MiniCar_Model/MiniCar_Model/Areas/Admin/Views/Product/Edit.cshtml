@{
    ViewData["Title"] = "Cập nhật sản phẩm";
}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Cập nhật sản phẩm</h3>

        ```
        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <form asp-action="Edit" method="POST" enctype="multipart/form-data">

                        <!-- Hidden Id (rất quan trọng khi submit update) -->
                        <input type="hidden" name="ProductId" value="" />

                        <div class="form-flex">
                            <div class="form-column">
                                <div class="input-row">
                                    <div class="input-group form-group-flex">
                                        <label>Mã sản phẩm</label>
                                        <input type="text" placeholder="Nhập mã sản phẩm..." class="input-control">
                                    </div>
                                </div>

                                <div class="input-row">
                                    <div class="input-group form-group-flex">
                                        <label>Tên sản phẩm</label>
                                        <input type="text" placeholder="Nhập tên sản phẩm..." class="input-control">
                                    </div>
                                </div>

                                <div class="input-row align-end">
                                    <div class="input-group form-group-flex">
                                        <label>Giá (VNĐ)</label>
                                        <input type="number" placeholder="0" class="input-control">
                                    </div>

                                    <div class="input-group form-group-flex">
                                        <label>Loại sản phẩm</label>
                                        <select class="input-control">
                                            <option>Giày Boots</option>
                                            <option>Giày Thể Thao</option>
                                        </select>
                                    </div>

                                    <a asp-area="Admin" asp-controller="Category" asp-action="create"
                                       class="btn btn-success add-btn-category">
                                        <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="form-column">
                                <div class="input-row">
                                    <div class="input-group form-group-flex">
                                        <label>Size</label>
                                        <input type="text" placeholder="30" class="input-control">
                                    </div>
                                    <div class="input-group form-group-flex">
                                        <label>Màu sắc</label>
                                        <input type="text" placeholder="Đỏ" class="input-control">
                                    </div>
                                </div>

                                <!-- hộp upload hình sản phẩm -->
                                <input type="hidden" name="hf_num_ful" id="hf_num_ful" value="1" />
                                <div id="ful_container">
                                    <div class="input-group">
                                        <label>Hình ảnh sản phẩm</label>

                                        <div class="input-row align-end">
                                            <input type="file" class="form-control ful-input" id="ful_1" name="Images" />
                                            <button type="button"
                                                    class="btn btn-danger add-btn-category"
                                                    id="btn_add_ful">
                                                +
                                            </button>
                                        </div>

                                        <!-- Preview ảnh đã có sau này load lên -->
                                        <div class="preview mt-2 d-flex flex-wrap gap-2">
                                            @* Hình cũ sẽ load tại đây *@
                                        </div>
                                    </div>
                                </div>

                                <div class="input-group">
                                    <label>Trạng thái</label>
                                    <div class="status-group">
                                        <input type="radio" name="status" id="active">
                                        <label for="active" class="status-active">Active</label>

                                        <input type="radio" name="status" id="inactive">
                                        <label for="inactive" class="status-inactive">Inactive</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-footer">
                            <button type="submit" class="btn-save">
                                <i class="fa fa-save"></i> Cập nhật sản phẩm
                            </button>
                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="back-link">
                                Quay lại danh sách
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    ```

</section>
