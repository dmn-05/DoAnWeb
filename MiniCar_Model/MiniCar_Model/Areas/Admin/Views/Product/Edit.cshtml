@using MiniCar_Model.Models.ViewModels
@model ProductEditVM
@{
  ViewData["Title"] = "Cập nhật sản phẩm";
}
<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Cập nhật sản phẩm</h3>

    <div class="row mt">
      <div class="col-md-12">
        <div class="content-panel">
          <form asp-action="Edit" method="POST" enctype="multipart/form-data">

            <input type="hidden" asp-for="ProductId" />

            <div class="form-flex">
              <div class="form-column">

                <div class="input-row">
                  <div class="input-group form-group-flex">
                    <label>Tên sản phẩm</label>
                    <input asp-for="NameProduct" class="input-control" placeholder="Nhập tên..." />
                  </div>
                </div>

                <div class="input-row">
                  <div class="input-group form-group-flex">
                    <label>Giá bán (VNĐ)</label>
                    <input asp-for="Price" type="number" class="input-control" />
                  </div>
                  <div class="input-group form-group-flex">
                    <label>Số lượng kho</label>
                    <input asp-for="Quantity" type="number" class="input-control" />
                  </div>
                </div>

                <div class="input-row align-end">
                  <div class="input-group form-group-flex">
                    <label>Loại sản phẩm</label>
                    <div class="select-with-btn">
                      <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="input-control">
                        <option value="">-- Chọn loại --</option>
                      </select>
                    </div>
                  </div>

                  <div class="input-group form-group-flex">
                    <label>Thương hiệu</label>
                    <select asp-for="TrademarkId" asp-items="ViewBag.TrademarkId" class="input-control">
                      <option value="">-- Chọn thương hiệu --</option>
                    </select>
                  </div>
                </div>

                <div class="input-row align-end">
                  <div class="input-group form-group-flex">
                    <label>Nhà cung cấp</label>
                    <select asp-for="SupplierId" asp-items="ViewBag.SupplierId" class="input-control">
                      <option value="">-- Chọn nhà cung cấp --</option>
                    </select>
                  </div>

                  <div class="input-group form-group-flex">
                    <label>Khuyến mãi</label>
                    <select asp-for="PromotionId" asp-items="ViewBag.PromotionId" class="input-control">
                      <option value="">-- Chọn khuyến mãi --</option>
                    </select>
                  </div>
                </div>

                <div class="input-group">
                  <label>Mô tả sản phẩm</label>
                  <textarea asp-for="Descriptions" rows="4"
                            class="input-control" style="resize: vertical;"
                            placeholder="Nhập mô tả chi tiết..."></textarea>
                </div>

              </div>

              <!-- RIGHT COLUMN -->
              <div class="form-column">

                <div class="input-group">
                  <label>Trạng thái sản phẩm</label>
                  <select asp-for="StatusProduct" class="input-control">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                  </select>
                </div>

                <div class="input-group">
                  <label>Hình ảnh sản phẩm</label>
                  <input type="file" asp-for="Images" multiple class="form-control" />

                  @if (Model.OldImages != null && Model.OldImages.Any())
                  {
                    foreach (var img in Model.OldImages)
                    {
                      <img src="@img" style="width:90px;height:90px;object-fit:cover;border-radius:6px;border:1px solid #ccc;margin:3px" />
                    }
                  }
                </div>

                <div class="input-row">
                  <div class="input-group form-group-flex">
                    <label>Kích cỡ (Size)</label>
                    <select asp-for="SizeId" asp-items="ViewBag.SizeId" class="input-control">
                      <option value="">-- Chọn Size --</option>
                    </select>
                  </div>

                  <div class="input-group form-group-flex">
                    <label>Màu sắc</label>
                    <select asp-for="ColorId" asp-items="ViewBag.ColorId" class="input-control">
                      <option value="">-- Chọn màu --</option>
                    </select>
                  </div>
                </div>

              </div>
            </div>

            <div class="form-footer">
              <button type="submit" class="btn-save">
                <i class="fa fa-save"></i> Cập nhật sản phẩm
              </button>
              <a asp-action="Index" class="back-link">Quay lại danh sách</a>
            </div>
          </form>
        </div>
      </div>
    </div>

  </section>
</section>

@section Scripts {
  <script src="~/admin/js/product-image-upload.js"></script>
}
