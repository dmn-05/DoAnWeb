@model ProductVariantEditVM

@{
  ViewData["Title"] = "Sửa biến thể";
}

<section id="main-content">
  <section class="wrapper">
    <h3>
      <i class="fa fa-angle-right"></i>
      Sửa biến thể cho sản phẩm:
      <strong>@ViewBag.ProductName</strong>
    </h3>

    <div class="row mt">
      <div class="col-md-12">
        <div class="content-panel">

          <form asp-action="EditVariant"
                method="post"
                enctype="multipart/form-data">

            <input type="hidden" asp-for="VariantId" />
            <input type="hidden" asp-for="ProductId" />

            <div class="row">

              <!-- CỘT TRÁI -->
              <div class="col-md-6">

                <!-- SIZE -->
                <div class="form-group mb-3">
                  <label>Size</label>
                  <select asp-for="SizeId"
                          asp-items="ViewBag.SizeId"
                          class="form-control">
                    <option value="">-- Chọn size --</option>
                  </select>
                  <span asp-validation-for="SizeId" class="text-danger"></span>
                </div>

                <!-- COLOR -->
                <div class="form-group mb-3">
                  <label>Màu sắc</label>
                  <select asp-for="ColorId"
                          asp-items="ViewBag.ColorId"
                          class="form-control">
                    <option value="">-- Chọn màu --</option>
                  </select>
                  <span asp-validation-for="ColorId" class="text-danger"></span>
                </div>

                <!-- GIÁ -->
                <div class="form-group mb-3">
                  <label>Giá bán</label>
                  <input asp-for="Price"
                         type="number"
                         step="1000"
                         class="form-control" />
                  <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- SỐ LƯỢNG -->
                <div class="form-group mb-3">
                  <label>Số lượng</label>
                  <input asp-for="Quantity"
                         type="number"
                         class="form-control" />
                  <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

              </div>



              <!-- CỘT PHẢI -->
              <div class="col-md-6">

                <div class="form-group mb-3">
                  <label>Trạng thái biến thể</label>
                  <select asp-for="StatusVariant" class="form-control">
                    <option value="ACTIVE">ACTIVE</option>
                    <option value="INACTIVE">INACTIVE</option>
                  </select>
                  <span asp-validation-for="StatusVariant" class="text-danger"></span>
                </div>

                <!-- ẢNH HIỆN TẠI -->
                @if (Model.ExistingImages != null && Model.ExistingImages.Any())
                {
                  <div class="form-group mb-3">
                    <label>Hình ảnh hiện tại</label>
                    <div class="d-flex flex-wrap gap-2">
                      @foreach (var img in Model.ExistingImages)
                      {
                        <img src="@img"
                             class="img-thumbnail"
                             style="width:120px;height:120px;object-fit:cover" />
                      }
                    </div>
                  </div>
                }

                <!-- UPLOAD ẢNH MỚI -->
                <div class="form-group mb-3">
                  <label>Thay hình ảnh (nếu muốn)</label>
                  <input asp-for="Images"
                         type="file"
                         id="imageInput"
                         multiple
                         class="form-control"
                         id="imageInput" />
                  <div class="form-group mt-3">
                    <label>Ảnh mới (preview)</label>
                    <div id="previewImages" class="d-flex flex-wrap gap-2"></div>
                  </div>
                  <span asp-validation-for="Images" class="text-danger"></span>

                  <small class="text-muted">
                    Nếu chọn ảnh mới, ảnh cũ sẽ bị thay thế
                  </small>
                </div>




              </div>
            </div>

            <!-- FOOTER -->
            <div class="d-flex justify-content-end gap-2 mt-4">
              <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Cập nhật biến thể
              </button>

              <a asp-action="Variants"
                 asp-route-id="@Model.ProductId"
                 class="btn btn-secondary">
                Quay lại
              </a>
            </div>

          </form>

        </div>
      </div>
    </div>
  </section>
</section>

@section Scripts {
  <script src="~/admin/js/product-image-upload.js"></script>
}
