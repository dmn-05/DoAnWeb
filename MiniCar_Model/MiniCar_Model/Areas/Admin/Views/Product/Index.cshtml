@{
	ViewData["title"] = "Admin";
	int currentPage = ViewBag.CurrentPage ?? 1;
	int totalPages = ViewBag.TotalPages ?? 1;
}
@model IEnumerable<MiniCar_Model.Models.ProductVariant>
<section id="main-content">
	<section class="wrapper">
		<h3><i class="fa fa-angle-right"></i> Sản phẩm</h3>

		<div class="row mt">
			<div class="col-md-12">
				<div class="content-panel">
					<div style="padding: 15px;">
						<div class="row">
							<div class="col-md-4 col-sm-12">
								<h4 style="margin-bottom: 15px;"><i class="fa fa-angle-right"></i> Danh sách</h4>
							</div>
							<div class="col-md-8 col-sm-12 text-right search-area">

								<form asp-action="Index" method="get" class="search-bar">
									<input type="text"
										   name="search"
										   value="@ViewBag.Search"
										   class="form-control search-input"
										   placeholder="Tìm kiếm sản phẩm..." />

									<button class="btn btn-primary">
										<i class="fa fa-search"></i>
									</button>
								</form>

								<a asp-area="Admin"
								   asp-controller="product"
								   asp-action="create"
								   class="btn btn-success add-btn">
									<i class="fa fa-plus"></i> <span class="hidden-xs">Thêm sản phẩm</span>
								</a>

							</div>
						</div>
					</div>



					<hr style="margin: 0;" />

					<div class="table-responsive">
						<table class="table table-hover table-sm">

							<thead>
								<tr>
									<th class="text-center">#</th>
									<th>Mã sản phẩm</th>
									<th>Tên sản phẩm</th>
									<th>Loại</th>
									<th>Giá</th>
									<th>Size</th>
									<th>Màu</th>

									<th class="text-center">Trạng thái</th>
									<th class="text-center">Hành động</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null && Model.Any())
								{
									int index = 1;
									foreach (var v in Model)
									{
										<tr>
											<td class="text-center">@index</td>
											<td><small>@v.Product.ProductId</small></td>
											<td><strong>@v.Product.NameProduct</strong></td>
											<td>@v.Product.Category?.NameCategory</td>
											<td>@string.Format("{0:N0}đ", v.Price)</td>
											<td>@v.Size.Scale</td>
											<td>@v.Color.ColorName</td>

											<td class="text-center">
												@if (v.StatusVariant == "ACTIVE")
												{
													<span class="label label-success label-mini">ACTIVE</span>
												}
												else
												{
													<span class="label label-danger label-mini">INACTIVE</span>
												}
											</td>

											<td class="text-center" style="white-space: nowrap;">
												<a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@v.VariantId" class="btn btn-primary btn-xs">
													<i class="fa fa-pencil"></i> Sửa
												</a>
												<button class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Xóa</button>
											</td>
										</tr>

										index++;
									}
								}


							</tbody>
						</table>
					</div> 

				</div>
				<div class="text-center" style="margin-top: 20px;">
					<ul class="pagination">

						<!-- Trang trước -->
						<li class="page-item @(currentPage <= 1 ? "disabled" : "")">
							<a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1 })">«</a>
						</li>

						<!-- Các số trang -->
						@for (int i = 1; i <= totalPages; i++)
						{
							<li class="page-item @(i == currentPage ? "active" : "")">
								<a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
							</li>
						}

						<!-- Trang sau -->
						<li class="page-item @(currentPage == totalPages ? "disabled" : "")">
							<a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1 })">»</a>
						</li>

					</ul>
				</div>
			</div>
		</div>
	</section>

</section>
@await Html.PartialAsync("_ConfirmDeleteModal")