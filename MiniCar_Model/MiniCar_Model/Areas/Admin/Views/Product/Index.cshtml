@{
	ViewData["title"] = "Admin";
	int currentPage = ViewBag.CurrentPage ?? 1;
	int totalPages = ViewBag.TotalPages ?? 1;
}

@model IEnumerable<ProductIndexVM>
<section id="main-content">
	<section class="wrapper">
		<h3><i class="fa fa-angle-right"></i> Sản phẩm</h3>

		<div class="row mt">
			<div class="col-md-12">
				<div class="content-panel">
					<div style="padding: 15px;">
						<div class="row">
							<div class="col-md-4 col-sm-12">
								<h4 style="margin-bottom: 15px;"><i class="fa fa-angle-right"></i> Danh sách</h4>
							</div>
							<div class="col-md-8 col-sm-12 text-right search-area">

								<form asp-action="Index" method="get" class="search-bar">
									<input type="text"
												 name="search"
												 value="@ViewBag.Search"
												 class="form-control search-input"
												 placeholder="Tìm kiếm sản phẩm..." />

									<button class="btn btn-primary">
										<i class="fa fa-search"></i>
									</button>
								</form>

								<a asp-area="Admin"
									 asp-controller="product"
									 asp-action="create"
									 class="btn btn-success add-btn">
									<i class="fa fa-plus"></i> <span class="hidden-xs">Thêm sản phẩm</span>
								</a>

							</div>
						</div>
					</div>



					<hr style="margin: 0;" />
					@await Html.PartialAsync("_AlertPartial")
					<div class="table-responsive">
						<table class="table table-hover table-sm">
							<thead>
								<tr>
									<th class="text-center">#</th>
									<th>Mã</th>
									<th>Tên sản phẩm</th>
									<th>Danh mục</th>
									<th>Giá</th>
									<th class="text-center">Tồn kho</th>
									<th class="text-center">Biến thể</th>
									<th class="text-center">Trạng thái</th>
									<th class="text-center">Hành động</th>
								</tr>
							</thead>
							<tbody>
								@{
									int index = 1;
								}
								@foreach (var p in Model)
								{
									<tr>
										<td class="text-center">@index</td>
										<td>@p.ProductId</td>
										<td><strong>@p.NameProduct</strong></td>
										<td>@p.CategoryName</td>
										<td>
											@if (p.MinPrice == p.MaxPrice)
											{
												@string.Format("{0:N0}đ", p.MinPrice)
											}
											else
											{
												@string.Format("{0:N0}", p.MinPrice)
												<span> – </span>
												@string.Format("{0:N0}đ", p.MaxPrice)
											}
										</td>
										<td class="text-center">@p.TotalQuantity</td>
										<td class="text-center">
											<span class="badge bg-info">@p.VariantCount</span>
										</td>
										<td class="text-center">
											@if (p.StatusProduct == "ACTIVE")
											{
												<span class="label label-success label-mini">ACTIVE</span>
											}
											else
											{
												<span class="label label-danger label-mini">INACTIVE</span>
											}
										</td>
										<td class="text-center">
											<a asp-action="Variants"
												 asp-route-id="@p.ProductId"
												 class="btn btn-info btn-xs">
												<i class="fa fa-cubes"></i> Biến thể
											</a>

											<a asp-action="Edit"
												 asp-route-id="@p.ProductId"
												 class="btn btn-primary btn-xs">
												<i class="fa fa-pencil"></i> Sửa
											</a>

											<form asp-action="Delete"
														asp-route-id="@p.ProductId"
														method="post"
														class="d-inline"
														onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">

												@Html.AntiForgeryToken()

												<button type="submit"
																class="btn btn-danger btn-xs">
													<i class="fa fa-trash"></i> Xóa
												</button>
											</form>
										</td>
									</tr>
									index++;
								}
							</tbody>
						</table>
					</div>

				</div>
				<div class="text-center" style="margin-top: 20px;">
					<ul class="pagination">

						<li class="page-item @(currentPage <= 1 ? "disabled" : "")">
							@if (currentPage > 1)
							{
								<a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, search = ViewBag.Search })">«</a>
							}
							else
							{
								<span class="page-link">«</span>
							}
						</li>

						@for (int i = 1; i <= totalPages; i++)
						{
							<li class="page-item @(i == currentPage ? "active" : "")">
								@if (i == currentPage)
								{
									<span class="page-link">@i</span>
								}
								else
								{
									<a class="page-link" href="@Url.Action("Index", new { page = i, search = ViewBag.Search })">@i</a>
								}
							</li>
						}

						<li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
							@if (currentPage < totalPages)
							{
								<a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, search = ViewBag.Search })">»</a>
							}
							else
							{
								<span class="page-link">»</span>
							}
						</li>


					</ul>
				</div>
			</div>
		</div>
	</section>

</section>
@await Html.PartialAsync("_ConfirmDeleteModal")