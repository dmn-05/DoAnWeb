@{
    ViewData["Title"] = "Sản phẩm";
}

<!-- Link CSS -->
@* <link href="~/admin/css/admin-product.css" rel="stylesheet" asp-append-version="true" /> *@

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>Sản phẩm</h3>

        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <form action="" method="POST" enctype="multipart/form-data">

                        <div class="form-flex">

                            <div style="flex:1; min-width:300px;">
                                <div class="input-row">
                                    <div class="input-group" style="flex:1;">
                                        <label>Mã sản phẩm</label>
                                        <input type="text" placeholder="Nhập mã sản phẩm..." class="input-control">
                                    </div>
                                </div>

                                <div class="input-row">
                                    <div class="input-group" style="flex:1;">
                                        <label>Tên sản phẩm</label>
                                        <input type="text" placeholder="Nhập tên sản phẩm..." class="input-control">
                                    </div>
                                </div>

                                <div class="input-row">
                                    <div class="input-group" style="flex:1;">
                                        <label>Giá (VNĐ)</label>
                                        <input type="number" placeholder="0" class="input-control">
                                    </div>
                                    <div class="input-group" style="flex:1;">
                                        <label>Loại sản phẩm</label>
                                        <select class="input-control">
                                            <option>Giày Boots</option>
                                            <option>Giày Thể Thao</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div style="flex:1; min-width:300px;">
                                <div class="input-row input-group">
                                    <div style="flex:1;">
                                        <label>Size</label>
                                        <input type="text" placeholder="30" class="input-control">
                                    </div>
                                    <div style="flex:1;">
                                        <label>Màu sắc</label>
                                        <input type="text" placeholder="Đỏ" class="input-control">
                                    </div>
                                </div>

                                <div class="input-group">
                                    <label>Hình ảnh sản phẩm</label>
                                    <input type="file" multiple class="input-control">
                                    <small style="color: #999; font-style: italic;">* Có thể chọn nhiều ảnh cùng lúc</small>
                                </div>

                                <div class="input-group">
                                    <label>Trạng thái</label>
                                    <div class="status-group">
                                        <input type="radio" name="status" id="active" checked>
                                        <label for="active" class="status-active">Active</label>

                                        <input type="radio" name="status" id="inactive">
                                        <label for="inactive" class="status-inactive">Inactive</label>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="form-footer">
                            <button type="submit" class="btn-save">
                                <i class="fa fa-save"></i> Lưu sản phẩm
                            </button>
                            <a asp-area="Admin" asp-controller="product" asp-action="index" class="back-link">
                                Quay lại danh sách
                            </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
</section>
