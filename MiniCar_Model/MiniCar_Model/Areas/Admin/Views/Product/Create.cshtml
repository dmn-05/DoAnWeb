@{
    ViewData["Title"] = "Sản phẩm";
}

<!-- Link CSS -->
@* <link href="~/admin/css/admin-product.css" rel="stylesheet" asp-append-version="true" /> *@
@model ProductCreateVM
<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Thêm sản phẩm mới</h3>

    <div class="row mt">
      <div class="col-md-12">
        <div class="content-panel">
          <form asp-action="Create" method="POST" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="form-flex">
              <div class="form-column">
                <div class="input-row">
                  <div class="input-group form-group-flex">
                    <label>Tên sản phẩm</label>
                    <input asp-for="NameProduct" class="input-control" placeholder="Nhập tên..." />
                    <span asp-validation-for="NameProduct" class="text-danger"></span>
                  </div>
                </div>

                <div class="input-row">
                  <div class="input-group form-group-flex">
                    <label>Giá bán (VNĐ)</label>
                    <input asp-for="Price" type="number" step="0.01" class="input-control" />
                      <span asp-validation-for="Price" class="text-danger"></span>
                  </div>
                  <div class="input-group form-group-flex">
                    <label>Số lượng kho</label>
                    <input asp-for="Quantity" type="number" class="input-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                  </div>
                </div>

                <div class="input-row align-end">
                  <div class="input-group form-group-flex">
                    <label>Loại sản phẩm (Category)</label>
                    <div class="select-with-btn">
                      <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="input-control">
                        <option value="">-- Chọn loại --</option>
                      </select>
                      <span asp-validation-for="CategoryId" class="text-danger"></span>
                      <a asp-area="Admin" asp-controller="Category" asp-action="create"
                         class="btn btn-success btn-add-inline"
                         title="Thêm loại mới">
                        <i class="fa fa-plus"></i>
                      </a>
                    </div>
                  </div>
                  <div class="input-group form-group-flex">
                    <label>Thương hiệu (Trademark)</label>
                    <select asp-for="TrademarkId" asp-items="ViewBag.TrademarkId" class="input-control">
                      <option value="">-- Chọn thương hiệu --</option>
                    </select>
                    <span asp-validation-for="TrademarkId" class="text-danger"></span>
                  </div>
                </div>

                <div class="input-row align-end">
                  <div class="input-group form-group-flex">
                    <label>Nhà cung cấp (Supplier)</label>
                    <select asp-for="SupplierId" asp-items="ViewBag.SupplierId" class="input-control">
                      <option value="">-- Chọn nhà cung cấp --</option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                  </div>
                  <div class="input-group form-group-flex">
                    <label>Khuyến mãi (Promotion)</label>
                    <select asp-for="PromotionId" asp-items="ViewBag.PromotionId" class="input-control">
                      <option value="">-- Chọn khuyến mãi --</option>
                    </select>
                    <span asp-validation-for="PromotionId" class="text-danger"></span>
                  </div>
                </div>

                <div class="input-group">
                  <label>Mô tả sản phẩm</label>
                  <textarea asp-for="Descriptions" rows="4" class="input-control" placeholder="Nhập mô tả chi tiết..."></textarea>
                  <span asp-validation-for="Descriptions" class="text-danger"></span>
                </div>
              </div>

              <div class="form-column">
                <div class="input-group">
                  <label>Trạng thái sản phẩm</label>
                  <select asp-for="StatusProduct" class="input-control">
                    <option value="ACTIVE">Active</option>
                    <option value="INACTIVE">Inactive</option>
                  </select>
                  <span asp-validation-for="StatusProduct" class="text-danger"></span>
                </div>

                <div class="input-group">
                  <label>Hình ảnh sản phẩm</label>
                  <input asp-for="Images"
                         id="imagesInput"
                         class="form-control"
                         multiple
                         accept="image/*" />
                  <span asp-validation-for="Images" class="text-danger"></span>
                  <div id="imagePreview"
                       class="preview mt-2 d-flex flex-wrap gap-2">
                  </div>
                </div>

                <div class="input-row">
                  <div class="input-group form-group-flex">
                    <label>Kích cỡ (Size)</label>
                    <select asp-for="SizeId" asp-items="ViewBag.SizeId" class="input-control">
                      <option value="">-- Chọn Size --</option>
                    </select>
                    <span asp-validation-for="SizeId" class="text-danger"></span>
                  </div>

                  <div class="input-group form-group-flex">
                    <label>Màu sắc</label>
                    <select asp-for="ColorId" asp-items="ViewBag.ColorId" class="input-control">
                      <option value="">-- Chọn màu --</option>
                    </select>
                    <span asp-validation-for="ColorId" class="text-danger"></span>
                  </div>
                </div>
              </div>
            </div>

            <div class="form-footer">
              <button type="submit" class="btn-save">
                <i class="fa fa-save"></i> Lưu sản phẩm
              </button>
              <a asp-action="Index" class="back-link">Quay lại danh sách</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</section>
@section Scripts {
  <script src="~/admin/js/product-image-upload.js"></script>
}
