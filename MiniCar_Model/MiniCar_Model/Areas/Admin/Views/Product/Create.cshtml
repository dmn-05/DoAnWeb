@{
  ViewData["Title"] = "Sản phẩm";
}

<!-- Link CSS -->
@* <link href="~/admin/css/admin-product.css" rel="stylesheet" asp-append-version="true" /> *@
@model ProductCreateVM

<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Thêm sản phẩm mới</h3>

    <div class="row mt">
      <div class="col-md-12">
        <div class="content-panel">

          <form asp-action="Create" method="POST" enctype="multipart/form-data">

            <div class="row">
              <!-- CỘT TRÁI -->
              <div class="col-md-6">

                <div class="form-group mb-3">
                  <label>Tên sản phẩm</label>
                  <input asp-for="NameProduct" class="form-control" />
                  <span asp-validation-for="NameProduct" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                  <label>Mô tả</label>
                  <textarea asp-for="Descriptions" rows="4" class="form-control"></textarea>
                </div>

                <!-- DANH MỤC + NÚT THÊM (ĐÃ FIX) -->
                <div class="form-group mb-3"> 
                  <label>Loại sản phẩm</label> 
                  <div class="select-with-btn"> 
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control"> 
                      <option value="">-- Chọn --</option> 
                    </select>
                    <a href="javascript:void(0)"
                       class="btn btn-success btn-add-inline"
                       title="Thêm loại sản phẩm"
                       onclick="openCategoryModal()">
                      <i class="fa fa-plus"></i>
                    </a>
                  </div> 
                  <span asp-validation-for="CategoryId" class="text-danger"></span> 
                </div>

                <div class="form-group mb-3">
                  <label>Nhà cung cấp</label>
                  <select asp-for="SupplierId"
                          asp-items="ViewBag.SupplierId"
                          class="form-control">
                    <option value="">-- Chọn --</option>
                  </select>
                </div>

              </div>

              <!-- CỘT PHẢI -->
              <div class="col-md-6">

                <div class="form-group mb-3">
                  <label>Thương hiệu</label>
                  <select asp-for="TrademarkId"
                          asp-items="ViewBag.TrademarkId"
                          class="form-control">
                    <option value="">-- Chọn --</option>
                  </select>
                </div>

                <div class="form-group mb-3">
                  <label>Khuyến mãi</label>
                  <select asp-for="PromotionId"
                          asp-items="ViewBag.PromotionId"
                          class="form-control">
                    <option value="">-- Không áp dụng --</option>
                  </select>
                </div>

                <div class="form-group mb-3">
                  <label>Trạng thái</label>
                  <select asp-for="StatusProduct" class="form-control">
                    <option value="ACTIVE">ACTIVE</option>
                    <option value="INACTIVE">INACTIVE</option>
                  </select>
                </div>

              </div>
            </div>

            <!-- FOOTER -->
            <div class="d-flex justify-content-end gap-2 mt-4">
              <button type="submit" class="btn btn-success">
                <i class="fa fa-save"></i> Lưu sản phẩm
              </button>

              <a asp-action="Index" class="btn btn-secondary">
                Quay lại
              </a>
            </div>

          </form>

        </div>
      </div>
    </div>
  </section>
</section>

@await Html.PartialAsync("~/Areas/Admin/Views/Shared/_AddCategoryModal.cshtml")

