@model List<MiniCar_Model.Models.ProductPost>

@{
	ViewData["Title"] = "Quản lý bài viết sản phẩm";
}

<section id="main-content">
	<section class="wrapper">

		<h3 class="mb-4">
			<i class="fa fa-angle-right"></i>
			Quản lý bài viết sản phẩm
		</h3>

		<div class="row">
			<div class="col-lg-12">

				<div class="content-panel p-4">

					<div class="mb-3 text-right">
						<a asp-area="Admin"
							 asp-controller="ProductPost"
							 asp-action="Create"
							 class="btn btn-success">
							<i class="fa fa-plus"></i> Thêm bài viết
						</a>
					</div>

					<table class="table table-bordered table-striped table-hover">
						<thead>
							<tr>
								<th style="width:80px;">Ảnh</th>
								<th>Tiêu đề</th>
								<th style="width:120px;">Trạng thái</th>
								<th style="width:160px;">Ngày tạo</th>
								<th style="width:120px;" class="text-center">Thao tác</th>
							</tr>
						</thead>
						<tbody>
							@if (Model.Any())
							{
								foreach (var item in Model)
								{
									<tr>
										<td class="text-center">
											@if (!string.IsNullOrEmpty(item.Thumbnail))
											{
												<img src="@Url.Content(item.Thumbnail)"
														 style="width:60px; height:auto;" />
											}
										</td>

										<td>
											<strong>@item.Title</strong>
											<div class="text-muted small">
												@item.Slug
											</div>
										</td>

										<td>
											@if (item.Status == "ACTIVE")
											{
												<span class="label label-success">Hoạt động</span>
											}
											else
											{
												<span class="label label-default">Ẩn</span>
											}
										</td>

										<td>
											@item.CreatedAt
										</td>

										<td class="text-center">
											<a asp-area="Admin"
												 asp-controller="ProductPost"
												 asp-action="Edit"
												 asp-route-id="@item.Id"
												 class="btn btn-xs btn-primary">
												<i class="fa fa-edit">Chỉnh sửa</i>
											</a>
										</td>
									</tr>
								}
							}
							else
							{
								<tr>
									<td colspan="5" class="text-center text-muted">
										Chưa có bài viết nào
									</td>
								</tr>
							}
						</tbody>
					</table>

				</div>

			</div>
		</div>

	</section>
</section>
