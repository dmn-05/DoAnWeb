@model MiniCar_Model.Models.Category
@{
	ViewData["Title"] = "Chỉnh sửa loại sản phẩm";
}

<section id="main-content">
	<section class="wrapper">
		<h3><i class="fa fa-angle-right"></i> Chỉnh sửa loại sản phẩm</h3>

		<div class="row mt">
			<div class="col-lg-8 col-md-10 col-sm-12">
				<div class="form-panel shadow-sm p-4 rounded-4">
					<h4 class="mb-4"><i class="fa fa-edit"></i> Cập nhật thông tin mã: CAT-@Model.CategoryId</h4>

					<form asp-action="Edit" method="post" class="form-horizontal style-form">
						<input type="hidden" asp-for="CategoryId" />
						<input type="hidden" asp-for="CreatedAt" />

						<div class="form-group mb-3">
							<label class="col-sm-3 control-label fw-bold">Tên loại sản phẩm</label>
							<div class="col-sm-9">
								<input asp-for="NameCategory" class="form-control" required />
								<span asp-validation-for="NameCategory" class="text-danger"></span>
							</div>
						</div>

						<div class="form-group mb-3">
							<label class="col-sm-3 control-label fw-bold">Danh mục cha</label>
							<div class="col-sm-9">
								<select asp-for="ParentId" class="form-control" asp-items="@(new SelectList(ViewBag.ParentCategories, "CategoryId", "NameCategory"))">
									<option value="">-- Không có danh mục cha --</option>
								</select>
							</div>
						</div>

						<div class="form-group mb-3">
							<label class="col-sm-3 control-label fw-bold">Trạng thái</label>
							<div class="col-sm-9">
								<select asp-for="StatusCategory" class="form-control">
									<option value="ACTIVE">ACTIVE</option>
									<option value="INACTIVE">INACTIVE</option>
								</select>
							</div>
						</div>

						<div class="text-right mt-4 border-top pt-3">
							<a asp-action="Index" class="btn btn-default mr-2"><i class="fa fa-reply"></i> Hủy</a>
							<button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Cập nhật thay đổi</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
</section>