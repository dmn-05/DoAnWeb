@model List<MiniCar_Model.Models.BlogPost>


@{
	ViewData["Title"] = "Quản lý bài viết";
}

<section id="main-content">
	<section class="wrapper">

		<h3>
			<i class="fa fa-angle-right"></i>
			Quản lý bài viết
		</h3>

		<div class="mb-3 text-right">
			<a asp-area="Admin"
				 asp-controller="BlogPost"
				 asp-action="Create"
				 class="btn btn-primary">
				<i class="fa fa-plus"></i> Thêm bài viết
			</a>
		</div>

		<div class="panel panel-default">
			<div class="panel-body">

				<table class="table table-bordered table-hover align-middle">
					<thead>
						<tr>
							<th style="width:45%">Tiêu đề</th>
							<th style="width:20%">Ngày tạo</th>
							<th style="width:15%">Trạng thái</th>
							<th style="width:20%" class="text-center">Thao tác</th>
						</tr>
					</thead>

					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@item.Title
								</td>

								<td>
									@item.CreatedAt.ToString("dd/MM/yyyy")
								</td>


								<td>
									<span class="label @(item.Status == "ACTIVE"
                                                        ? "label-success"
                                                        : "label-default")">
										@item.Status
									</span>
								</td>

								<td class="text-center">
									<a asp-area="Admin"
										 asp-controller="BlogPost"
										 asp-action="Edit"
										 asp-route-id="@item.Id"
										 class="btn btn-sm btn-warning">
										<i class="fa fa-pencil"></i> Chỉnh sửa
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>


			</div>
		</div>

	</section>
</section>
